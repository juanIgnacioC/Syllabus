@using SaberesSyllabus.Models
@model List<SaberesySoluciones.Repositories.Saberes>

<div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Agregar un nuevo Saber</h4>
            </div>
            @using (Html.BeginForm("CrearSaberEnAprendizaje", "Saberes", FormMethod.Post, new { enctype = "multipart/form-data", @style = "border:none", @class = "col-offset-2" }))
            {
                <div class="modal-body">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="codigoA">Codigo del aprendizaje:</label>
                            <input maxlength="255" type="text" min="0" class="form-control" placeholder="Escriba aquí el codigo del Aprendizaje." name="codigoA" required>
                        </div>

                        <div class="form-group">
                            <label for="codigoP">Codigo del Saber:</label>
                            <input maxlength="255" type="text" min="0" class="form-control" placeholder="Escriba aquí el codigo del Saber." name="codigoP" required>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Añadir</button>
                </div>
            }
        </div>
    </div>
</div>